                        <x:String>.mp2</x:String>
                        <x:String>.mp3</x:String>
                        <x:String>.ogg</x:String>
                        <x:String>.wav</x:String>
                        <x:String>.wma</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button
                Grid.Column="2"
                Grid.Row="1"
                x:Name="SelectionButton"
                Text="Select audio..."
                Clicked="SelectionClick"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label
                Grid.Column="3"
                Grid.Row="1"
                x:Name="fileName"
                Text="File name:"
                FontSize="18"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <Label
                Grid.ColumnSpan="3"
                Grid.Row="2"
                Text="↓"
                FontSize="39"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            <Label
                Grid.Column="0"
                Grid.Row="3"
                Text="Pick an audio format for the output file"
                FontSize="18"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Picker
                Grid.Column="1"
                Grid.Row="3"
                x:Name="formatPickerDest"
                BackgroundColor="Gray"
                Title="Convert into..."
                SelectedIndexChanged="IndexChanged"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
